<Page
    x:Class="UwpEnhancedNavigationDemo.FlyoutDemoContentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpEnhancedNavigationDemo.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid" Tapped="Content_Tapped" Width="300"
          Background="Transparent" Margin="{StaticResource ContentPageRootMargin}" Padding="0" >
        <TextBlock Text="Base Nav Flyout"
                   Foreground="{StaticResource PageForegroundBrush}"
                   Margin="{StaticResource PageTitleMargin}"
                   FontSize="{StaticResource PageTitleFontSize}"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left" />
        <Button Click="CloseMe_Clicked" VerticalAlignment="Center" HorizontalAlignment="Center" 
                Background="{StaticResource PageBackgroundBrush}"
                Foreground="{StaticResource IconColorBrush}"
                Margin="0"
                BorderThickness="0">
            <TextBlock Text="Close Me"/>
        </Button>
    </Grid>
</Page>
