<Page
    x:Class="UwpEnhancedNavigationDemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpEnhancedNavigationDemo"
    xmlns:customNav="using:UwpEnhancedNavigation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <!-- 
      xyzMinWindowWidth is for the adaptive triggers
    -->
    <customNav:EnhancedNavigationShell x:ConnectionId='1' x:Name="Shell" ShellBackground="White" ShellForeground="Gray"
                CompactPaneLength="45" OpenPaneLength="350"
                LargeDisplayMode="Inline" MediumDisplayMode="CompactOverlay" SmallDisplayMode="Overlay"
                LargeMinWindowWidth="900" MediumMinWindowWidth="500" SmallMinWindowWidth="0">
        <customNav:EnhancedNavigationShell.PainContent>
            <Grid Background="Red"/>
        </customNav:EnhancedNavigationShell.PainContent>
        <customNav:EnhancedNavigationShell.MainContent>
            <Grid Background="Gray"/>
        </customNav:EnhancedNavigationShell.MainContent>
    </customNav:EnhancedNavigationShell>
</Page>

