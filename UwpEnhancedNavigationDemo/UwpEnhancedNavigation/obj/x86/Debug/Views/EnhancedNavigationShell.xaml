<UserControl x:ConnectionId='1'
    x:Class="UwpEnhancedNavigation.EnhancedNavigationShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpEnhancedNavigation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:BooleanToVisibilityInverseConverter x:Key="BooleanToVisibilityInverseConverter"/>
        <local:HamburgerButtonStateToVisibilityConverter x:Key="HamburgerButtonStateToVisibilityConverter"/>
        <local:HamburgerArrowStateToVisibilityConverter x:Key="HamburgerArrowStateToVisibilityConverter"/>
        <local:PreviousArrowStateToVisibilityConverter x:Key="PreviousArrowStateToVisibilityConverter"/>
        <x:String x:Key="HamburgerIcon">M1.230957,19.693036L30.768982,19.693036C31.506958,19.693036,32,20.185041,32,20.923019L32,22.154038C32,22.893054,31.506958,23.384999,30.768982,23.384999L1.230957,23.384999C0.49194336,23.384999,0,22.893054,0,22.154038L0,20.923019C0,20.185041,0.49194336,19.693036,1.230957,19.693036z M1.230957,9.8470059L30.768982,9.8470059C31.506958,9.8470059,32,10.339011,32,11.076989L32,12.30801C32,13.045987,31.506958,13.53903,30.768982,13.53903L1.230957,13.53903C0.49194336,13.53903,0,13.047025,0,12.30801L0,11.076989C0,10.339011,0.49194336,9.8470059,1.230957,9.8470059z M1.230957,0L30.768982,0C31.506958,-6.3337211E-08,32,0.49298194,32,1.2309594L32,2.4619804C32,3.1999579,31.506958,3.6930011,30.768982,3.6930013L1.230957,3.6930013C0.49194336,3.6930011,0,3.1999579,0,2.4619804L0,1.2309594C0,0.49298194,0.49194336,-6.3337211E-08,1.230957,0z</x:String>
        <x:String x:Key="PreviousArrowIcon">M11.299988,0L16.599976,0 7.0999756,8.8999959 32,8.8999959 32,12.399997 7.0999756,12.399997 16.5,21.299993 16.400024,21.399999 11.299988,21.399999 2.5999756,13.100009 0,10.699985z</x:String>
        <local:HamburgerCommands x:Key="hamburgerMenuClickedCommand" />
        <local:PreviousCommand x:Key="goBackClickedCommand" />
        <local:ArrowMenuCommand x:Key="ArrowMenuCommand" />
    </UserControl.Resources>
    <Grid x:ConnectionId='2' x:Name="MainSplitViewGrid"  Padding="0"                                       >
        <SplitView x:ConnectionId='3' x:Name="ShellSplitView"  Padding="0"  Margin="0,32,0,0"
                                                        
                                                        
                                                                            
                                                                          
                                                   
                                                                 
                                                           >
            <SplitView.Pane>
                <Grid x:ConnectionId='4'                                       >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="5,0,0,0" Visibility="Visible">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button x:ConnectionId='6' x:Name="HamburgerButton" Grid.Column="0"
                                Command="{StaticResource hamburgerMenuClickedCommand}"
                                                                                                                                                                      
                                Margin="0,0,0,0"
                                Width="40"
                                Height="40"
                                                                     
                                                                     
                                VerticalAlignment="Center"
                                BorderThickness="0">
                                <Path x:ConnectionId='10' Data="{StaticResource HamburgerIcon}"
                                                                 
                                  VerticalAlignment="Stretch"
                                  HorizontalAlignment="Stretch"
                                  Width="24"
                                  Height="24"
                                  Stretch="Uniform" />
                            </Button>
                            <Button x:ConnectionId='7' x:Name="PreviousButton" Grid.Column="0"
                                                                                                                                                                    
                                Command="{StaticResource goBackClickedCommand}"
                                Margin="3,0,0,0"
                                Width="40"
                                Height="40"
                                                                     
                                                                     
                                VerticalAlignment="Center"
                                BorderThickness="0">
                                <Path x:ConnectionId='9' Data="{StaticResource PreviousArrowIcon}"
                                                                 
                                  VerticalAlignment="Stretch"
                                  HorizontalAlignment="Stretch"
                                  Width="24"
                                  Height="24"
                                  Stretch="Uniform" />
                            </Button>
                            <!-- WHERE THE TITLE CONTENT COULD GO -->
                            <ContentPresenter x:ConnectionId='8' Grid.Column="1"                                                                               />
                        </Grid>
                    </Grid>
                    <ContentPresenter x:ConnectionId='5' Grid.Row="1" Margin="0,0,0,0" 
                                                                    ></ContentPresenter>
                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid  Background="Yellow">
                    <Grid Padding="0" Margin="0,0,0,0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="0,0,0,0" Visibility="Visible">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button x:ConnectionId='13' x:Name="ArrowHamburgerButton" Grid.Column="0"
                                                                                                                                                                         
                                    Command="{StaticResource ArrowMenuCommand}"
                                    Margin="3,0,0,0"
                                    Width="40"
                                    Height="40"
                                                                         
                                                                         
                                    VerticalAlignment="Center"
                                    BorderThickness="0">
                                    <Path x:ConnectionId='15' Data="{StaticResource PreviousArrowIcon}"
                                                                       
                                        VerticalAlignment="Stretch"
                                        HorizontalAlignment="Stretch"
                                        Width="24"
                                        Height="24"
                                        Stretch="Uniform" />
                                </Button>
                                <ContentPresenter x:ConnectionId='14' Grid.Column="1"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                                    />
                            </Grid>
                        </Grid>
                        <ContentPresenter x:ConnectionId='12' Grid.Row="1"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                               ></ContentPresenter>
                    </Grid>
                    <Grid x:ConnectionId='11'  x:Name="DisableContent" 
                                                                                                                                                   
                              Margin="0,0,0,0"
                              Background="Gray" Opacity="0.6"
                              VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    </Grid>
                </Grid>
            </SplitView.Content>
        </SplitView>
        <VisualStateManager.VisualStateGroups >
            <VisualStateGroup x:ConnectionId='16' x:Name="WidthVisualStates"                                              >
                <VisualState x:ConnectionId='17' x:Name="LARGE">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger x:ConnectionId='22'                                               />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:ConnectionId='18' x:Name="MEDIUM">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger x:ConnectionId='21'                                                />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:ConnectionId='19' x:Name="SMALL">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger x:ConnectionId='20'                                               />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</UserControl>

