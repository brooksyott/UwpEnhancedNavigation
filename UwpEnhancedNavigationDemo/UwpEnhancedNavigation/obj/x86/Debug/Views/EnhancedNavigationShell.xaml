<UserControl x:ConnectionId='1'
    x:Class="UwpEnhancedNavigation.EnhancedNavigationShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpEnhancedNavigation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
       <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid x:ConnectionId='2' x:Name="MainSplitViewGrid"  Padding="0"                                       >
        <SplitView x:ConnectionId='3' x:Name="ShellSplitView"  Padding="0" 
                                                        
                                                        
                                                                            
                                                                          
                                                                 
                                                           >
            <SplitView.Pane>
                <ContentPresenter x:ConnectionId='5'                               ></ContentPresenter>
            </SplitView.Pane>
            <SplitView.Content>
                <ContentPresenter x:ConnectionId='6'                                ></ContentPresenter>
            </SplitView.Content>
        </SplitView>
        <Grid x:ConnectionId='4' x:Name="DisableContent" 
                                                                                                                                   
              Margin="0,35,0,0"
              Background="Gray" Opacity="0.6"
              VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        </Grid>
        <VisualStateManager.VisualStateGroups >
            <VisualStateGroup x:ConnectionId='7' x:Name="WidthVisualStates"                                              >
                <VisualState x:ConnectionId='8' x:Name="LARGE">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger x:ConnectionId='13'                                               />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:ConnectionId='9' x:Name="MEDIUM">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger x:ConnectionId='12'                                                />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:ConnectionId='10' x:Name="SMALL">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger x:ConnectionId='11'                                               />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</UserControl>

