<UserControl
    x:Class="UwpEnhancedNavigation.ShellUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpEnhancedNavigation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="MainSplitViewGrid"  Padding="0" Background="{x:Bind ShellBackground}" >
        <SplitView x:Name="ShellSplitView"  Padding="0" 
                   Background="{x:Bind ShellBackground}"
                   Foreground="{x:Bind ShellForeground}">
            <SplitView.Pane>
                <ContentPresenter Content="{x:Bind PainContent}"></ContentPresenter>
            </SplitView.Pane>
            <SplitView.Content>
                <ContentPresenter  Content="{x:Bind MainContent}"></ContentPresenter>
            </SplitView.Content>
        </SplitView>
    </Grid>
</UserControl>
