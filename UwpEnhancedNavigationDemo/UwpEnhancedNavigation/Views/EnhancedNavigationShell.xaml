    </UserControl.Resources>
    <Grid x:Name="MainSplitViewGrid"  Padding="0" Background="{x:Bind ShellBackground}" >
        <SplitView x:Name="ShellSplitView"  Padding="0" 
                   Background="{x:Bind ShellBackground}"
                   Foreground="{x:Bind ShellForeground}"
                   DisplayMode="{x:Bind ViewModel.DisplayMode, Mode=TwoWay}"
                   IsPaneOpen="{x:Bind ViewModel.IsPaneOpen, Mode=TwoWay}"
                   CompactPaneLength="{x:Bind CompactPaneLength}"
                   OpenPaneLength="{x:Bind OpenPaneLength}">
            <SplitView.Pane>
                <Grid Padding="0" Margin="0,0,0,0" Background="Red">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,20,0,0">
                        <Button x:Name="HamburgerButton" 
                            Margin="3,0,0,0"
                            Width="40"
                            Height="40"
                            Background="{x:Bind ShellBackground}"
                            Foreground="{x:Bind ShellForeground}"
                            VerticalAlignment="Top"
                            BorderThickness="0"
                            Click="HamburgerButton_Click">
                            <Path Data="{StaticResource HamburgerIcon}"
                                  Fill="{x:Bind ShellForeground}"
                                  VerticalAlignment="Stretch"
                                  HorizontalAlignment="Stretch"
                                  Width="24"
                                  Height="24"
                                  Stretch="Uniform" />
                        </Button>
                    </Grid>
                    <ContentPresenter Grid.Row="1" Margin="0,0,0,0" 
                                      Content="{x:Bind PainContent}"></ContentPresenter>
                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <ContentPresenter  Content="{x:Bind MainContent}"></ContentPresenter>
            </SplitView.Content>
        </SplitView>
        <Grid x:Name="DisableContent" 
              Visibility="{x:Bind ViewModel.DisableContent, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" 
              Margin="0,35,0,0"
              Background="Gray" Opacity="0.6"
              VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        </Grid>
        <VisualStateManager.VisualStateGroups >
            <VisualStateGroup x:Name="WidthVisualStates" CurrentStateChanged="VisualStateChange_Event">
                <VisualState x:Name="LARGE">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{x:Bind LargeMinWindowWidth}" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="MEDIUM">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{x:Bind MediumMinWindowWidth}" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="SMALL">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{x:Bind SmallMinWindowWidth}" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</UserControl>
